    var months = GetDays((int)ViewBag.Year).GroupBy(x => x.Month).ToDictionary(x => x.Key, x => x.Select(y => new { Day = y.Day, Weekend = y.DayOfWeek == DayOfWeek.Saturday || y.DayOfWeek == DayOfWeek.Sunday, Date = y }).ToArray());

    ScriptManager.RegisterGlobalJavascript("ViewData.Months", months, 500);
}

@functions 
{
    IEnumerable<DateTime> GetDays(int year)
    {
        var date = new DateTime(year, 1, 1);
        while (date.Year == year)
        {
            yield return date;
            date = date.AddDays(1);
        }
    }
}

